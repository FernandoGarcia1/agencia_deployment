extends ../layout/index
block contenido 
    main.container.mt-5
        h1.text-center.mb-5 #{pagina}

        .row  
            .col-md-12
               include ../layout/partials/testimoniales
            .col-md-12
                h2.text-center Agrega un Testimonial
                if(errores)
                    .alert.alert-danger.text-center Todos los campos son necesarios
                    each error in errores
                        .alert.alert-danger.text-center=error.mensaje
                

                .row.justify-content-center
                    .col-md-8
                        form(action='/testimoniales', method="POST")
                            .form-group
                                label(for="nombre") Nombre   
                                input(type="text", id="nombre", class="form-control", placeholder= "Tu nombre", name="nombre", value=nombre)
                            .form-group
                                label(for="correo") Nombre   
                                input(type="email", id="correo", class="form-control", placeholder= "Tu correo", name="correo", value=correo)
                            .form-group
                                label(for="mensaje") Mensaje   
                                textarea(name="mensaje", id="mensajes", class="form-control", placeholder="Tu mensaje",  rows="5")=mensaje
                            input(type="submit", value="Enviar" class="btn-success btn-block")

